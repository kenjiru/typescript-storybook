{
  "name": "typescript-storybook",
  "version": "1.0.0",
  "description": "Sample project using Storybook, Jest and TypeScript",
  "main": "lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "scripts": {
    "compile": "tsc",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "keywords": [
    "Jest",
    "TypeScript",
    "Storybook",
    "StoryShots",
    "React"
  ],
  "license": "MIT",
  "dependencies": {
    "lodash": "^3.10.1",
    "react": "16.2.0"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.8",
    "@types/jest": "^20.0.2",
    "@types/react": "^16.4.4",
    "@types/react-dom": "^16.0.6",
    "@types/react-test-renderer": "^16.0.1",
    "@types/storybook__react": "^3.0.1",
    "awesome-typescript-loader": "^4.0.1",
    "jest": "^22.3.0",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "ts-jest": "22.4.6",
    "typescript": "^2.9.2"
  },
  "jest": {
    "transform": {
      "\\.(jsx?|tsx?)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(.*/__tests__/.*|\\.(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
